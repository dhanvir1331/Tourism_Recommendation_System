<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment Successful</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            /* Ultra-modern color palette */
            --midnight: #0a0e17;         /* Deep space blue background */
            --deep-space: #121828;       /* Slightly lighter for cards */
            --cosmic-teal: #2dd4bf;      /* Vibrant teal - primary accent */
            --neon-blue: #3b82f6;        /* Electric blue - secondary accent */
            --stardust: #94a3b8;         /* Soft stardust gray for text */
            --moonlight: #e2e8f0;        /* Bright moonlight for headings */
            --galaxy-purple: #7c3aed;    /* Purple for special highlights */
            --supernova: #f59e0b;        /* Golden yellow for important elements */
            
            /* UI Variables */
            --text-color: var(--moonlight);
            --light-text: var(--stardust);
            --background: var(--midnight);
            --card-bg: rgba(18, 24, 40, 0.85);
            --border-color: rgba(148, 163, 184, 0.15);
            --shadow: 0 12px 40px rgba(0, 0, 0, 0.25);
            --radius: 18px;
            --glass-blur: blur(12px);
            --transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.1);
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            transition: var(--transition);
        }

        body {
            font-family: 'Montserrat', 'Poppins', sans-serif;
            background: 
                radial-gradient(circle at 15% 30%, rgba(45, 212, 191, 0.08), transparent 70%),
                radial-gradient(circle at 85% 70%, rgba(59, 130, 246, 0.08), transparent 70%),
                linear-gradient(to bottom, var(--midnight), var(--deep-space));
            background-attachment: fixed;
            color: var(--text-color);
            line-height: 1.6;
            min-height: 100vh;
            padding: 40px 20px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .container {
            max-width: 600px;
            width: 100%;
            padding: 40px;
            border-radius: var(--radius);
            background: var(--card-bg);
            backdrop-filter: var(--glass-blur);
            box-shadow: var(--shadow);
            border: 1px solid var(--border-color);
            position: relative;
            overflow: hidden;
            animation: slideUp 0.8s ease-out;
        }

        .container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(to right, var(--cosmic-teal), var(--neon-blue));
            opacity: 0.8;
        }

        .container::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, 
                rgba(45, 212, 191, 0.1) 0%, 
                rgba(59, 130, 246, 0.1) 100%);
            z-index: -1;
        }

        h1 {
            background: linear-gradient(90deg, var(--cosmic-teal), var(--neon-blue));
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            font-size: 32px;
            font-weight: 700;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 15px;
        }

        h2 {
            color: var(--cosmic-teal);
            font-size: 22px;
            font-weight: 600;
            margin: 25px 0 15px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        h2 i {
            font-size: 24px;
        }

        .success-icon {
            font-size: 80px;
            color: var(--cosmic-teal);
            display: block;
            margin: 0 auto 25px;
            text-align: center;
            animation: pop 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards;
        }

        .detail-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
            margin-bottom: 20px;
        }

        .detail-item {
            background: rgba(18, 24, 40, 0.6);
            padding: 15px;
            border-radius: 12px;
            border: 1px solid var(--border-color);
        }

        .detail-label {
            font-size: 14px;
            color: var(--light-text);
            margin-bottom: 5px;
        }

        .detail-value {
            font-size: 16px;
            font-weight: 600;
            color: var(--text-color);
        }

        .detail-value.price {
            color: var(--cosmic-teal);
        }

        .total-row {
            margin-top: 20px;
            padding-top: 20px;
            border-top: 2px solid var(--border-color);
            font-size: 18px;
        }

        .total-row .detail-label {
            font-size: 18px;
            color: var(--text-color);
        }

        .total-row .detail-value {
            color: var(--supernova);
            font-size: 24px;
            font-weight: 700;
        }

        .btn-group {
            display: flex;
            gap: 15px;
            margin-top: 30px;
            flex-wrap: wrap;
            justify-content: center;
        }

        .btn {
            padding: 14px 24px;
            font-size: 16px;
            border-radius: 12px;
            cursor: pointer;
            background: linear-gradient(135deg, var(--cosmic-teal), var(--neon-blue));
            border: none;
            color: white;
            font-weight: 600;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            box-shadow: 0 4px 20px rgba(59, 130, 246, 0.3);
            z-index: 1;
            text-decoration: none;
            flex: 1;
            min-width: 200px;
        }

        .btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, var(--neon-blue), var(--cosmic-teal));
            opacity: 0;
            transition: var(--transition);
            z-index: -1;
        }

        .btn:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 30px rgba(59, 130, 246, 0.5);
        }

        .btn:hover::before {
            opacity: 1;
        }

        .btn::after {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: 0.5s;
        }

        .btn:hover::after {
            left: 100%;
        }

        /* Animations */
        @keyframes slideUp {
            from { opacity: 0; transform: translateY(30px); }
            to { opacity: 1; transform: translateY(0); }
        }

        @keyframes pop {
            0% { transform: scale(0); opacity: 0; }
            80% { transform: scale(1.1); opacity: 1; }
            100% { transform: scale(1); opacity: 1; }
        }

        @keyframes float {
            0% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
            100% { transform: translateY(0); }
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .container {
                padding: 30px 20px;
            }
            
            h1 {
                font-size: 28px;
            }
            
            .detail-grid {
                grid-template-columns: 1fr;
            }
            
            .btn {
                min-width: 100%;
            }
        }

        @media (max-width: 480px) {
            h1 {
                font-size: 24px;
            }
            
            h2 {
                font-size: 20px;
            }
            
            .success-icon {
                font-size: 60px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1><i class="fas fa-check-circle"></i> Payment Successful!</h1>
        <div class="success-icon"><i class="fas fa-check"></i></div>
        
        <p style="text-align: center; font-size: 18px; margin-bottom: 30px;">
            Thank you, <strong style="color: var(--cosmic-teal);"><%= username ? username : 'Guest' %></strong>, for your booking.<br>
            Your payment has been processed successfully.
        </p>

        <h2><i class="fas fa-receipt"></i> Payment Details</h2>
        <div class="detail-grid">
            <div class="detail-item">
                <div class="detail-label">Transaction ID</div>
                <div class="detail-value"><%= transactionId %></div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Payment Date</div>
                <div class="detail-value"><%= date %></div>
            </div>
        </div>

        <h2><i class="fas fa-suitcase"></i> Booking Details</h2>
        <div class="detail-grid">
            <div class="detail-item">
                <div class="detail-label">Booking ID</div>
                <div class="detail-value"><%= bookingId %></div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Destination</div>
                <div class="detail-value"><%= destination %></div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Visit Date</div>
                <div class="detail-value"><%= visitDate %></div>
            </div>
        </div>

        <h2><i class="fas fa-money-bill-wave"></i> Payment Breakdown</h2>
        <div class="detail-grid">
            <div class="detail-item">
                <div class="detail-label">Hotel Price</div>
                <div class="detail-value price">₹<%= hotelPrice %></div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Flight Price</div>
                <div class="detail-value price">₹<%= flightPrice %></div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Payment Method</div>
                <div class="detail-value">Credit Card</div>
            </div>
            <div class="detail-item total-row">
                <div class="detail-label">Total Amount Paid</div>
                <div class="detail-value">₹<%= totalAmount %></div>
            </div>
        </div>

        <div class="btn-group">
            <button id="download-pdf" class="btn"><i class="fas fa-download"></i> Download Receipt</button>
            <a href="/" class="btn"><i class="fas fa-home"></i> Visited Places</a>
        </div>
    </div>

    <script>
        document.getElementById("download-pdf").addEventListener("click", function() {
            const btn = this;
            const originalBtnText = btn.innerHTML;
            
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Generating...';
            btn.disabled = true;

            const data = {
                transactionId: "<%= transactionId %>",
                booking_id: "<%= bookingId %>",
                username: "<%= username %>",
                destination: "<%= destination %>",
                visitDate: "<%= visitDate %>",
                hotelPrice: "<%= hotelPrice %>",
                flightPrice: "<%= flightPrice %>",
                totalAmount: "<%= totalAmount %>",
                paymentMethod: "<%= paymentMethod %>",
                date: "<%= date %>"
            };

            fetch("/payment/download-pdf", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify(data)
            })
            .then(response => response.blob())
            .then(blob => {
                btn.innerHTML = originalBtnText;
                btn.disabled = false;
                
                const url = window.URL.createObjectURL(blob);
                const a = document.createElement("a");
                a.href = url;
                a.download = "booking-receipt.pdf";
                document.body.appendChild(a);
                a.click();
                a.remove();
                
                // Add success animation
                btn.innerHTML = '<i class="fas fa-check"></i> Downloaded!';
                setTimeout(() => {
                    btn.innerHTML = originalBtnText;
                }, 2000);
            })
            .catch(error => {
                console.error("PDF Download Error:", error);
                btn.innerHTML = '<i class="fas fa-exclamation-circle"></i> Failed';
                setTimeout(() => {
                    btn.innerHTML = originalBtnText;
                    btn.disabled = false;
                }, 2000);
                alert("Failed to generate PDF. Please try again.");
            });
        });

        // Add floating animation to success icon
        const successIcon = document.querySelector('.success-icon i');
        setInterval(() => {
            successIcon.style.animation = 'float 3s ease-in-out infinite';
        }, 1000);
    </script>
</body>
</html>